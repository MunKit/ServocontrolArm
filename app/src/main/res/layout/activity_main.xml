<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.munkit.servocontrolarm.MainActivity">

    <Button
        android:text="@string/clockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:id="@+id/Servo1cw" />

    <Button
        android:text="@string/Anticlockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Servo1cw"
        android:layout_toEndOf="@+id/Servo1cw"
        android:layout_marginStart="26dp"
        android:id="@+id/Servo1ccw" />

    <Button
        android:text="@string/clockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Servo1cw"
        android:layout_alignStart="@+id/Servo1cw"
        android:layout_marginTop="21dp"
        android:id="@+id/Servo2cw" />

    <Button
        android:text="@string/clockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/Servo3cw"
        android:layout_below="@+id/Servo2cw"
        android:layout_alignStart="@+id/Servo2cw" />

    <Button
        android:text="@string/Anticlockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Servo3cw"
        android:layout_alignStart="@+id/Servo2ccw"
        android:id="@+id/Servo3ccw" />

    <TextView
        android:text="Servo 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Servo1ccw"
        android:layout_alignStart="@+id/Servo1cw"
        android:id="@+id/textView" />

    <TextView
        android:text="Servo 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Servo2ccw"
        android:layout_alignStart="@+id/Servo2cw"
        android:id="@+id/textView2"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:text="Servo 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Servo3ccw"
        android:layout_alignStart="@+id/Servo3cw"
        android:id="@+id/textView3" />

    <Button
        android:text="@string/clockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Servo4cw"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Servo 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_above="@+id/Servo4cw"
        android:layout_alignStart="@+id/Servo3cw" />

    <Button
        android:text="@string/Anticlockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Servo4ccw"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Servo3ccw" />

    <Button
        android:text="@string/hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:id="@+id/Clampbutton"
        android:layout_above="@+id/Servo3ccw"
        android:layout_toEndOf="@+id/Servo2ccw" />

    <Button
        android:text="@string/Anticlockwise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Servo2ccw"
        android:layout_alignBaseline="@+id/Servo2cw"
        android:layout_alignBottom="@+id/Servo2cw"
        android:layout_alignStart="@+id/Servo1ccw" />

    <TextView
        android:text="@string/disconnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/respondtext"
        android:layout_above="@+id/Servo1ccw"
        android:layout_toEndOf="@+id/Servo1ccw"
        android:textColor="@android:color/holo_red_light" />
</RelativeLayout>
